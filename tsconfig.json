{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types",
      "./db/supabase/validations",
      "./db/libsql/validation.ts",
      "lib/shared/hooks/use-supabase-realtime.ts",
      "lib/shared/hooks/use-supabase-fetch.ts",
      "lib/shared/hooks/use-supabase-crud.ts"
    ],
    "types": ["node"],
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "eslint.config.ts",
    ".prettierrc.json",
    "tailwind.config.ts",
    "postcss.config.mjs",
    "drizzle.libsql.config.ts",
    "drizzle.supabase.config.ts",
    "components.json"
  ],
  "exclude": ["node_modules"]
}
